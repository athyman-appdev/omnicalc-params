<div class="col-md-9">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">New Word Count Calculation</h3>
        </div>
        <div class="card-body">
            <form action="/word_count/results">
    
                <div class="form-group row">
                    <label for="word_count_input" class="font-weight-bold col-sm-2">Text</label>
                    <textarea class="col-sm-10" id="word_count_input" type="text" rows="3" name="word_count_input" placeholder="Enter some text"></textarea>
                </div>    
    
                <div class="form-group row">
                    <label for="special_word" class="font-weight-bold col-sm-2">Special word (optional)</label>
                    <input class="col-sm-10" id="special_word" type="text" name="special_word" placeholder="Enter a particular word to count">
                </div>
                <div class="form-group">
                    <div class="offset-sm-2 col-sm-10">
                        <button class="btn btn-primary btn-block" style="width: 100%">Process text</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>